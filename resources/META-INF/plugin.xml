        <!--serviceImplementation="com.github.ansafari.plugin.generate.setting.XbatisSettingStorage"/>-->
        <!--<editorOptionsProvider instance="XbatisConfigurable"-->
        <!--id="editor.preferences.myCompletion"-->
        <!--key="title.code.myCompletion" />-->
    </extensions>

