<idea-plugin>
    <id>me.xiongjinteng.plugin.xbatis</id>
    <name>Xbatis-Plugin</name>
    <version>0.0.2</version>
    <vendor email="xiongjinteng@gmail.com" url="https://ansafari.github.io">GitHub</vendor>

    <description><![CDATA[
      A simple reference contributor for ibatis in JAVA AND SQL XML.<br>
      And I will make it support for Mybatis in the future.<br>
    ]]></description>

    <change-notes><![CDATA[
      支持Ibatis mapper.xml 与 JAVA DAO 中的 statementName 的映射跳转.<br>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="143.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!--sqlMap文件-->
        <dom.fileDescription implementation="com.github.ansafari.plugin.xbatis.dom.description.SqlMapDescription"/>
        <!--mapper文件-->
        <dom.fileDescription implementation="com.github.ansafari.plugin.xbatis.dom.description.MapperDescription"/>

        <definitionsSearch
                implementation="com.github.ansafari.plugin.xbatis.search.MyBatis3ProxiesDefinitionsSearcher"/>

        <!--service-->
        <projectService serviceImplementation="com.github.ansafari.plugin.xbatis.service.DomFileElementsFinder"/>

        <!--java reference to xml-->
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="com.github.ansafari.plugin.xbatis.provider.XBatisProxiesLineMarkerProvider"/>

        <!--<codeInsight.lineMarkerProvider language="XML"-->
        <!--implementationClass="com.github.ansafari.plugin.xbatis.simple.XmlStatementLineMarkerProvider"/>-->

        <!--java 字面量 reference to xml statement-->
        <psi.referenceContributor
                implementation="com.github.ansafari.plugin.xbatis.psi.reference.XBatisReferenceContributor"/>

        <lang.documentationProvider language="JAVA"
                                    implementationClass="com.github.ansafari.plugin.xbatis.psi.reference.StatementDocumentationProvider"/>

        <inspectionToolProvider
                implementation="com.github.ansafari.plugin.xbatis.provider.MyBatisInspectionToolsProvider"/>

        <qualifiedNameProvider
                implementation="com.github.ansafari.plugin.xbatis.provider.IdentifiableStatementQualifiedNameProvider"/>

        <callHierarchyProvider language="XML"
                               implementationClass="com.github.ansafari.plugin.xbatis.provider.IdentifiableStatementHierarchyProvider"/>

        <!--symbol name search alt+cmd+o-->
        <gotoSymbolContributor
                implementation="com.github.ansafari.plugin.xbatis.psi.reference.GoToSqlMapStatementContributor"/>

        <projectConfigurable instance="com.github.ansafari.plugin.xbatis.setting.XbatisConfigurable"
                             bundle="messages.XbatisPluginBundle"/>

        <applicationService serviceInterface="com.github.ansafari.plugin.xbatis.setting.XbatisSettingStorage"
                            serviceImplementation="com.github.ansafari.plugin.xbatis.setting.XbatisSettingStorage"/>
        <!--<editorOptionsProvider instance="com.github.ansafari.plugin.xbatis.setting.XbatisConfigurable"-->
        <!--id="editor.preferences.myCompletion"-->
        <!--key="title.code.myCompletion" />-->
    </extensions>

